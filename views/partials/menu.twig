{% if menu %}
	<ul class="flex flex-col font-medium mt-4 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-transparent dark:bg-gray-800 md:dark:bg-transparent dark:border-gray-700">


		{% for item in items %}
			<li>
				<a class="block py-2 px-3 md:p-0 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:dark:text-blue-500 dark:bg-blue-600 md:dark:bg-transparent" aria-current="page" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>


				{% include 'partials/menu.twig' with {
                    items: item.children
                } %}
			</li>
		{% endfor %}
	</ul>
{% endif %}
